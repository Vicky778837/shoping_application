 <center ><h1>index</h1></center>
 <div class="container-fluid">
    <%= link_to "Buy now!",new_add_path,class:" btn btn-info",style:"margin:20px;margin-top:10px;" %><br>
  <div class="row">

   <% @line_items.each do |line_item| %>
    <div class="col-sm-12">
      <div class="card mb-3" id="card">
        <div class="col-md-8">
          <div class="card-body">
            <%= image_tag(line_item.product.avatar, style:"height:150px;width:230px;") if line_item.product.avatar.attached? %>
            <h5 class="card-title"> <%=line_item.product.name %></h5>
            <p class="card-text">price : <%=line_item.price %></p>
            <p class="card-text"><%=line_item.description%></p>
            <%#byebug%>
              <%=link_to "show", line_item_path(line_item), class:"btn btn-primary", style:"margin-left:10px;margin-top:10px;"%>
                 <%=link_to "remove", line_item_path(line_item),data:{
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class:"btn btn-danger", style:"margin-left:10px;margin-top:10px;"%>
                           &nbsp; &nbsp; &nbsp;  <br><br>
                <%total_price = line_item.quantity * line_item.price  %>
            
                Quantity: <%= line_item.quantity %> Total Price: <%= number_to_currency(total_price) %>
                  <br><br>
                <%=link_to "Reduce one", line_item_reduce_path(:id => line_item), method: :post ,class: "btn btn-info"%>

                <%=link_to "Add (+1)", line_item_add_path(:id => line_item), method: :post,class: "btn btn-info"%>
          </div>
        </div>
      </div>
    </div>
  <%end%>  
  </div>
   <%= link_to "Backs", root_path,class:"btn btn-secondary", style:"margin-left:40px;margin-top:20px; width:100px;"%>
  </div>
</div>



