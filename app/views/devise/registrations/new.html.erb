
<div class="col-lg-6 mx-lg-auto">
<div class="card shadow">
  <div class="card-header">
  <h2 class="card title text center">Sign up</h2>
  </div>
  <div class="card-body">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="form-group">
    <%= f.label :first_name ,class: "mb-2" %><br />
    <%= f.text_field :fname, autofocus: true, autocomplete: "first_name",class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name,class: "mb-2" %><br />
    <%= f.text_field :lname, autofocus: true, autocomplete: "last_name",class: "form-control form-control-lg" %>
  </div>


  <div class="field">
    <%= f.label :phone,class: "mb-2" %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone",class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :address,class: "mb-2" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address",class: "form-control form-control-lg" %>
  </div>

   <div class="form-group">
    <%= f.label :date_of_birth,class: "mb-2" %><br />
    <%= f.date_field  :dob, autofocus: true, autocomplete: "usersname",class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :email,class: "mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :password,class: "mb-2" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation,class: "mb-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control form-control-lg"%>
  </div>
  <div class="actions">
    <%= f.submit "Sign up",data: {turbo:false},class:"btn btn-success",style: "margin:10px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>