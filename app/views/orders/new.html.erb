
<div class="col-lg-6 mx-lg-auto">
<div class="card shadow">
  <div class="card-header">
  <h2 class="card title text center">Order now</h2>
  </div>
  <div class="card-body">


<%= form_for(@order) do |f| %>

   <div class="form-group">
    <%= f.label :name,class: "mb-2"%><br>
    <%= f.text_field :name, required: true, autofocus: true,class: "form-control form-control-lg" %>
  </div>

     <div class="form-group">
    <%= f.label :email,class: "mb-2"%><br>
    <%= f.email_field :email,class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :address ,class: "mb-2"%><br>
    <%= f.text_area :address,class: "form-control form-control-lg" %>
    </div>
  <p>
    <%= f.submit class: "btn btn-success",style:"margin:10px;"%>
  </p>
<% end%>
</div>
</div>
</div>
</div>