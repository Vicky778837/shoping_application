   <p class="card-text"><span class="fa fa-home">address: </span><%=@users.address %></p>
  <p class="card-text"><span class='far fa-calendar' style='font-size:24px'>date of birth:</span><%=@users.dob %></p>
  <p class="card-text"><span class='far fa-user'> role: </span><%=@users.role %></p>
  <p class="card-text"> <span class="fas fa-envelope me-3"><%=@users.email %></span></p>
  <%= link_to "back",root_path,class:"btn btn-secondary"%>
  </div>
  </div>
  </div>
  </div>
</div>
</div>
